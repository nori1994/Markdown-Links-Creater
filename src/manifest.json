{
    "manifest_version": 2,
    "name": "create link as markdown",
    "version": "1.0",
    "description": "Copy the selected text as markdown.",
    "icons": {},
    "browser_action": {
        "default_icon": {}
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true,
        "open_in_tab": false
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "notifications",
        "storage",
        "clipboardRead"
    ]
}