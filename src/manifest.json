{
    "manifest_version": 2,
    "name": "Markdown Links Creater",
    "version": "1.0",
    "description": "Create link as Markdown format using selected text or page title, and stock the link. Then copy all stocked links to ClipBoard.",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "browser_action": {
        "default_icon": "img/icon32.png"
    },
    "background": {
        "scripts": [
            "js/common.js",
            "js/background.js"
        ],
        "persistent": false
    },
    "options_page": "options.html",
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "contextMenus",
        "storage",
        "tabs"
    ]
}